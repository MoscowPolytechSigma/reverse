{
    "fileTypes": ["asm", "s"],
    "scopeName": "source.asm",
    "name": "Assembly",
    "patterns": [
        {
            "match": "\\b([A-Za-z_][A-Za-z0-9_]*:)\\b",
            "name": "entity.name.function.assembly"
        },
        {
            "match": "\\b(mov|add|sub|mul|div|jmp|je|jne|jg|jl|call|ret|push|pop|inc|dec|cmp|test|and|or|xor|shl|shr|lea|nop)\\b",
            "name": "keyword.control.assembly"
        },
        {
            "match": "\\b(eax|ebx|ecx|edx|esi|edi|esp|ebp|rax|rbx|rcx|rdx|rsi|rdi|rsp|rbp|r8|r9|r10|r11|r12|r13|r14|r15)\\b",
            "name": "variable.parameter.assembly"
        },
        {
            "match": ";.*$",
            "name": "comment.line.assembly"
        },
        {
            "match": "\\b([0-9]+)\\b",
            "name": "constant.numeric.assembly"
        },
        {
            "match": "\\b(byte|word|dword|qword|ptr)\\b",
            "name": "storage.type.assembly"
        },
        {
            "match": "\\[.*\\]",
            "name": "string.quoted.assembly"
        }
    ]
}